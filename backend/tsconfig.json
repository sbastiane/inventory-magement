{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "lib": ["ES2022"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@modules/*": ["src/modules/*"],
        "@shared/*": ["src/shared/*"]
      },
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}